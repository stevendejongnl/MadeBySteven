{
  "name": "madebysteven.nl",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "prebuild": "npm run build:clean",
    "build": "concurrently 'npm run build:js' 'npm run build:css'",
    "build:js": "tsc -b",
    "build:css": "sass --no-source-map src/main.scss dist/main.css",
    "build:clean": "rimraf ./dist ./tsconfig.tsbuildinfo",
    "serve": "npm run build && web-dev-server --node-resolve",
    "serve:watch": "concurrently 'npm run serve -- --watch' 'npm run build:js -- --watch' 'npm run build:css -- --watch'",
    "pretest": "npm run build",
    "test": "web-test-runner",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "stylelint": "stylelint 'src/**/*.{ts,css,scss}'",
    "stylelint:fix": "stylelint 'src/**/*.{ts,css,scss}' --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^3.2.0",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@web/dev-server": "^0.3.0",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/test-runner": "^0.17.1",
    "@web/test-runner-playwright": "^0.10.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "postcss-lit": "^1.1.0",
    "rimraf": "^5.0.1",
    "sass": "^1.69.2",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "lit": "^2.7.6"
  }
}
